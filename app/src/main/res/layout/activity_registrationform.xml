<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registrationform">

    <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="70dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"

                android:layout_gravity="center">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/pharmlog" />

            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:paddingHorizontal="10dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#9acd32"
                android:elevation="2dp"
                android:textStyle="bold"
                android:text="PHARMACY PAATHSHALA"
                android:textAllCaps="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:elevation="2dp"
                    android:paddingHorizontal="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!--        <ImageView-->
                    <!--            android:layout_width="wrap_content"-->
                    <!--            android:layout_height="wrap_content"-->
                    <!--            app:tint="@android:color/darker_gray"-->
                    <!--            android:src="@drawable/ic_mail"/>-->
                    <EditText
                        android:id="@+id/nameid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:hint="Enter Name"
                        android:autofillHints="no"
                        android:inputType="textPersonName"
                        android:background="@color/Silver"
                        android:imeOptions="actionNext"
                        android:textSize="16sp"
                        android:paddingHorizontal="7dp"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:elevation="2dp"

                    android:paddingHorizontal="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!--        <ImageView-->
                    <!--            android:layout_width="wrap_content"-->
                    <!--            android:layout_height="wrap_content"-->
                    <!--            app:tint="@android:color/darker_gray"-->
                    <!--            android:src="@drawable/ic_mail"/>-->
                    <EditText
                        android:id="@+id/emailid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:hint="Enter Email"
                        android:autofillHints="no"
                        android:inputType="textEmailAddress"
                        android:background="@color/Silver"
                        android:imeOptions="actionNext"

                        android:textSize="16sp"

                        android:paddingHorizontal="7dp"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:elevation="2dp"
                    android:paddingHorizontal="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!--        <ImageView-->
                    <!--            android:layout_width="wrap_content"-->
                    <!--            android:layout_height="wrap_content"-->
                    <!--            app:tint="@android:color/darker_gray"-->
                    <!--            android:src="@drawable/ic_mail"/>-->
                    <EditText
                        android:id="@+id/passwordid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter Password"
                        android:autofillHints="no"
                        android:inputType="textPassword"
                        android:imeOptions="actionNext"

                        android:textSize="16sp"
                        android:background="@color/Silver"

                        android:paddingHorizontal="7dp"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:elevation="2dp"
                    android:paddingHorizontal="6dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!--        <ImageView-->
                    <!--            android:layout_width="wrap_content"-->
                    <!--            android:layout_height="wrap_content"-->
                    <!--            app:tint="@android:color/darker_gray"-->
                    <!--            android:src="@drawable/ic_mail"/>-->
                    <EditText
                        android:id="@+id/addressid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text=""
                        android:hint="Enter Address"
                        android:autofillHints="no"
                        android:inputType="text"
                        android:background="@color/Silver"
                        android:imeOptions="actionNext"

                        android:textSize="16sp"
                        android:textColor="#000"
                        android:paddingHorizontal="7dp"/>

                </LinearLayout>
                <CheckBox
                    android:id="@+id/ch_t_and_c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="5dp"
                    android:text="Agree with terms and conditions"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/registration"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:elevation="2dp"
                android:layout_gravity="center"
                android:paddingHorizontal="25dp"
                android:background="@color/purple_700"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:tint="@color/white"
                    android:src="@drawable/semester1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get registered"
                    android:padding="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"/>


            </LinearLayout>


        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>